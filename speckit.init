name=speckit.init
# speckit 初始化文件（根据 docs/ 目录调整）
repo: ryan-vn/ai_interview
repo_id: 1080331306
created_by: ryan-vn
created_at: 2025-10-21T08:19:19Z
speckit_version: 0.1

# 说明:
# - 本文件将仓库中的 docs/ 子文件夹和若干关键文件映射为 Speckit 的模块，
#   以便对文档、工作流和运维说明进行可追踪管理。
# - 如需推送到仓库，请回复“推送”或“Push”，我会将本文件提交到 speckit/init 分支并打开 PR。

languages:
  - "TypeScript"

settings:
  default_branch: "main"
  create_branch_for_changes: true
  pr_title_prefix: "[speckit] "
  reviewer: "ryan-vn"

modules:
  - name: "docs-index"
    path: "docs/README.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "docs", "index"]
    template: "documentation-index"

  - name: "project-summary"
    path: "docs/PROJECT_SUMMARY.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "summary"]
    template: "project-summary"

  - name: "requirements-index"
    path: "docs/requirements/README.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "requirements"]
    template: "requirements-index"

  - name: "requirements-core"
    path: "docs/requirements/required.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "requirements", "core"]
    template: "requirements-core"

  - name: "requirements-detailed"
    path: "docs/requirements/requirements_detailed.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "requirements", "detailed"]
    template: "requirements-detailed"

  - name: "interview-workflow"
    path: "INTERVIEW_WORKFLOW.md"
    type: "workflow"
    owner: "ryan-vn"
    labels: ["speckit", "workflow", "interview"]
    template: "workflow"

  - name: "interview-workflow-requirements"
    path: "docs/requirements/interview_workflow_requirements.md"
    type: "workflow"
    owner: "ryan-vn"
    labels: ["speckit", "workflow", "requirements"]
    template: "workflow-requirements"

  - name: "development-guides-index"
    path: "docs/development/DEVELOPMENT.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "development"]
    template: "developer-guide"

  - name: "api-documentation"
    path: "docs/development/API.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "api"]
    template: "api-docs"

  - name: "architecture"
    path: "docs/development/ARCHITECTURE.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "architecture"]
    template: "architecture"

  - name: "deployment-overview"
    path: "docs/deployment/DEPLOYMENT.md"
    type: "workflow"
    owner: "ryan-vn"
    labels: ["speckit", "deployment"]
