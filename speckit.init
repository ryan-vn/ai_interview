  - name: "testing-guide"
    path: "docs/testing/TESTING_GUIDE.md"
    type: "documentation"
    owner: "ryan-vn"
    labels: ["speckit", "testing"]
    template: "testing-guide"

  - name: "testing-cases"
    path: "docs/testing/TEST_CASES.md"
